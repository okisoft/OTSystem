<% provide(:title, '回答入力画面') %>
<h1>回答入力画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@question) do |f| %>
      <%= f.label :reply %>
      <%= f.text_field :reply, class: 'form-control' %>

      <%= f.submit "送信する", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
