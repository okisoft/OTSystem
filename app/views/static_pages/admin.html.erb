</header>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h3 class="center">管理者ホーム</h3><br><br>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4" align="center">
      <h3>授業一覧</h3>
      <br>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-4">
      <% @lectures.each do |lecture| %>
        <li>
          <%= link_to lecture.name, times_lecture_path(lecture), class: "h4"  %>
        </li>
        <% end %>
    </div>

    <div class="col-lg-7" align="center">

        <%= link_to "授業新規作成", new_lecture_path, class: "btn btn-primary" %>
        <br><br>
        <%= link_to "アカウント新規登録", signup_path, class: "btn btn-primary" %>
        <br><br>
        <%= link_to "アカウント登録情報編集", edit_user_path(current_user), class: "btn btn-primary" %>
        <br><br>
        <%= link_to "ログアウト", logout_path, method: :delete, class: "btn btn-primary" %>

    </div>

  </div>
</div>
