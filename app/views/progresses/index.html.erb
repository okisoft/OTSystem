<% provide(:title, '進捗一覧画面') %>
<h1>進捗一覧画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to "授業終了",  public_lecture_path, method: :delete, class: "btn btn-primary" %>
    <%= link_to "質問一覧", lecture_time_questions_path(@lecture_time), class: "btn btn-primary" %>

    <% @users.each do |user| %>
      <li>
        <%= user.user_id %>
        <%= user.name %>

        <% @problems.each do |problem| %>
          <%= problem.achievment?(user) %> <%# 達成状況を表示 %>
        <% end %>

        <%= user.icon(@lecture_time) %> <%# アイコン表示 %>
        <%= user.count_not_reply_question(@problems) %> <%# 未回答の質問数を表示 %>
      </li>
    <% end %>
  </div>
</div>
