<% provide(:title, '授業編集') %>
<h3>授業編集画面</h3>
<div class="container">
<div class="row justify-content-center">
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
    <div class="form-group">
    <%= form_for(@lecture) do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-3">
      <%= f.label :name, "授業名" %>
      </div>
    </div>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
</div>
</div>
<div class="row justify-content-center">
    <div class="col-md-2" >
      <%= f.fields_for :lecture_years do |ly| %>
        <% next if ly.object.year != Date.today.financial_year %>
        <%= ly.hidden_field :year , value: Date.today.financial_year %>
        <%= ly.label :style, "授業形態" %>
        <%= ly.select :style, [["個人", "個人"], ["グループ", "グループ"]], class: 'form-control' %>
      <% end %>
    </div>
  </div>
<br>
<div class="row justify-content-center">
    <div class="col-md-1" >
      <%= f.submit "決定", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
