<% provide(:title, '課題編集画面') %>
<h1>課題編集画面</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@problem) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit "送信する", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
